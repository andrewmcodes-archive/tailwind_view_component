<%= render Tailwind::BaseComponent.new(**@kwargs) do %>
  <% if header %>
    <%= render Tailwind::BaseComponent.new(**header.kwargs) do %>
      <%= header.content %>
    <% end %>
  <% end %>
  <% if body %>
    <%= render Tailwind::BaseComponent.new(**body.kwargs) do %>
      <%= body.content %>
    <% end %>
  <% end %>
  <% if rows.any? %>
    <ul>
      <% rows.each do |row| %>
        <%= render Tailwind::BaseComponent.new(**row.kwargs) do %>
          <%= row.content %>
        <% end %>
      <% end %>
    </ul>
  <% end %>
  <% if footer %>
    <%= render Tailwind::BaseComponent.new(**footer.kwargs) do %>
      <%= footer.content %>
    <% end %>
  <% end %>
<% end %>
