<%= render Tailwind::BaseComponent.new(**@kwargs) do %>
  <% if heading.present? %>
    <%= render Tailwind::BaseComponent.new(**heading.kwargs) do %>
      <%= heading.content %>
    <% end %>
  <% end %>
  <% if actions.present? %>
    <%= render Tailwind::BaseComponent.new(**actions.kwargs) do %>
      <%= actions.content %>
    <% end %>
  <% end %>
  <% if description.present? %>
    <%= render Tailwind::BaseComponent.new(**description.kwargs) do %>
      <%= description.content %>
    <% end %>
  <% end %>
<% end %>
